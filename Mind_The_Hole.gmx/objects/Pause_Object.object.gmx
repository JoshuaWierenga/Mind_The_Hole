        <arguments>
          <argument>
            <kind>1</kind>
            <string>move = 0;

move -= max(keyboard_check_pressed(vk_up), 0);
move += max(keyboard_check_pressed(vk_down), 0);

if (mouse_check_button_pressed(mb_left) &amp;&amp; mouse_x &gt; room_width/2 - 80 &amp;&amp; mouse_x &lt; room_width/2 + 80 &amp;&amp; mouse_y &gt;= 240 &amp;&amp; mouse_y &lt;= 240 + (space * menu_total))
{
    menu_pos = round((mouse_y - 256)/space);
}
    
if (move != 0)
{
    menu_pos += move;
    if (menu_pos &lt; 0) menu_pos = array_length_1d(menu) - 1;
    if (menu_pos &gt; array_length_1d(menu) - 1) menu_pos = 0;
}

if (keyboard_check_released(vk_enter) || mouse_check_button_pressed(mb_left))
{
    switch (menu[menu_pos])
    {
        case "Continue":
        {
            instance_destroy();
            break;
        }
        case "Toggle Fullscreen":
        {
            window_set_fullscreen(!window_get_fullscreen());
            instance_destroy();
            break;
        }        
        case "Toggle Touch Buttons":
        {
            Game_GUI_Object.use_touch_controls = !Game_GUI_Object.use_touch_controls;
            instance_destroy();
            break;
        }
        case "Return to Menu":
        {
            Control_Object.pausequit = 1;
            instance_destroy();
            break;
        }
        case "Quit Game":
        {
            game_end();
            instance_destroy();
            break;
        }
        default: 
        {
            break;
        }
    }
}

if (keyboard_check_pressed(vk_escape))
{
    instance_destroy();
}
</string>
